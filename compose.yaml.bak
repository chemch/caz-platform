services:
  cashman-flask-project:
    build:
      context: alert-svc
    container_name: alert-svc
    restart: unless-stopped
    init: true
    ports:
      - "5002:5002"  # Exposed by Dockerfile
    # env_file: ./alert-svc/.env  # Uncomment if .env file exists
    networks:
      - cashman-net
    # Add depends_on here if you add external services (e.g., databases)

networks:
  cashman-net:
    driver: bridge
